{
  "name": "endaoment",
  "version": "1.0.0",
  "description": "A no-loss grant system that redirects interest earned on deposits to a selected recipient.",
  "main": "index.js",
  "scripts": {
    "test": "source .env && npx oz compile && mocha --exit --timeout 0 test/*-test.js",
    "ganache": "source .env && ganache-cli -d -f https://mainnet.infura.io/v3/$INFURA_ID --allowUnlimitedContractSize --gasLimit 100000000 --networkId 999",
    "setup-1": "source .env && npx oz deploy -n development EndaomentFactory",
    "compile": "npx oz compile"
  },
  "dependencies": {
    "@openzeppelin/contracts-ethereum-package": "^2.5.0",
    "dotenv": "^8.2.0",
    "truffle": "^5.1.21",
    "truffle-hdwallet-provider": "^1.0.17"
  },
  "devDependencies": {
    "@openzeppelin/cli": "^2.8.0",
    "@openzeppelin/test-environment": "^0.1.4",
    "@openzeppelin/test-helpers": "^0.5.5",
    "@truffle/hdwallet-provider": "^1.0.34",
    "chai": "^4.2.0",
    "mocha": "^7.1.1"
  }
}
